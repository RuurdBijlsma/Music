{
    "name": "ruurd-music",
    "version": "6.11.2",
    "description": "A streaming music player",
    "main": "./out/main/index.js",
    "keywords": [
        "Music",
        "Streaming",
        "Spotify"
    ],
    "author": {
        "email": "ruurd@bijlsma.dev",
        "name": "Ruurd Bijlsma",
        "url": "ruurd.dev"
    },
    "repository": "https://github.com/ruurdbijlsma/Music",
    "homepage": "https://github.com/ruurdbijlsma/Music",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:unpack": "npm run build && electron-builder --dir",
        "build:win": "npm run build && electron-builder --win",
        "build:mac": "npm run build && electron-builder --mac",
        "build:linux": "npm run build && electron-builder --linux",
        "publish:win": "npm run build && electron-builder --win --config --publish always"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.0",
        "@electron-toolkit/utils": "^3.0.0",
        "chart.js": "^4.4.4",
        "chartjs-adapter-date-fns": "^3.0.0",
        "colorthief": "^2.4.0",
        "date-fns": "^4.1.0",
        "electron-log": "^5.2.0",
        "electron-updater": "^6.1.7",
        "events": "^3.3.0",
        "express": "^4.21.0",
        "ffbinaries": "^1.1.6",
        "filenamify": "^6.0.0",
        "iconv-lite": "^0.6.3",
        "idb": "^8.0.0",
        "pinia": "^2.2.4",
        "replace-special-characters": "^1.2.7",
        "spotify-web-api-js": "github:RuurdBijlsma/spotify-web-api-js",
        "vite-plugin-vuetify": "^2.0.4",
        "vue-chartjs": "^5.3.1",
        "vue-router": "^4.4.5",
        "vuetify": "^3.3.23",
        "youtube-search-api": "^1.2.2",
        "yt-dlp-wrap": "^2.3.12"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config": "^1.0.2",
        "@electron-toolkit/eslint-config-ts": "^2.0.0",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@mdi/font": "^7.4.47",
        "@rushstack/eslint-patch": "^1.10.3",
        "@types/node": "^20.14.8",
        "@vitejs/plugin-vue": "^5.0.5",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "electron": "^31.0.2",
        "electron-builder": "^24.13.3",
        "electron-vite": "^2.3.0",
        "eslint": "^8.57.0",
        "eslint-plugin-vue": "^9.26.0",
        "less": "^4.2.0",
        "prettier": "^3.3.2",
        "typescript": "^5.5.2",
        "vite": "^5.3.1",
        "vue": "^3.4.30",
        "vue-tsc": "^2.0.22"
    }
}
